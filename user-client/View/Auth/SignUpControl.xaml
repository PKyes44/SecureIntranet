<UserControl x:Class="user_client.View.SignUpControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#E1E1E1">

    <UserControl.Resources>
        <!-- 둥근 테두리 TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 둥근 테두리 PasswordBox -->
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <!-- 둥글게 -->
                        <Border CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- 전체 배경 -->
    <Grid Background="#E1E1E1">
        <!-- 회원가입 카드 -->
        <Border Width="457" Height="447"  
                Background="#E1E1E1"
                BorderBrush="#A4A4A4" 
                BorderThickness="1" 
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- 로고 -->
                <TextBlock Text="Tribosss"
                           FontFamily="pack://application:,,,/Fonts/#Ravi Prakash"
                           FontSize="50"
                           Width="154"
                           Height="79"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- 사번 입력 -->
                <Grid Width="308" Height="54" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="32*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SB"
                             Style="{StaticResource RoundedTextBox}"
                             FontSize="16"
                             Padding="12,0,0,0"
                             VerticalContentAlignment="Center"
                             BorderBrush="#8C8C8C"
                             BorderThickness="1"
                             Background="#E1E1E1" Margin="0,-27,0,27" Grid.ColumnSpan="2"/>
                    <!-- 플레이스홀더 -->
                    <TextBlock Text="사번을 입력하세요"
                               Foreground="#8C8C8C"
                               FontSize="16"
                               Margin="20,-11,0,44"
                               IsHitTestVisible="False"
                               x:Name="SBPlaceholder" Grid.ColumnSpan="2"/>
                </Grid>

                <!-- 비밀번호 입력 -->
                <Grid Width="308" Height="54" Margin="0,0,0,16">
                    <PasswordBox x:Name="PW"
                                 Style="{StaticResource RoundedPasswordBox}"
                                 FontSize="16"
                                 Padding="12,0,0,0"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="#8C8C8C"
                                 BorderThickness="1"
                                 Background="#E1E1E1" Margin="0,-40,0,40"/>
                    <!-- 플레이스홀더 -->
                    <TextBlock Text="비밀번호를 입력하세요"
                               Foreground="#8C8C8C"
                               FontSize="16"
                               Margin="20,-24,0,0"
                               VerticalAlignment="Top"
                               IsHitTestVisible="False"
                               x:Name="PWPlaceholder"/>
                </Grid>

                <!-- 비밀번호 확인 입력 -->
                <Grid Width="308" Height="54" Margin="0,0,0,8">
                    <PasswordBox x:Name="PW2"
                                 Style="{StaticResource RoundedPasswordBox}"
                                 FontSize="16"
                                 Padding="12,0,0,0"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="#8C8C8C"
                                 BorderThickness="1"
                                 Background="#E1E1E1" Margin="0,-51,0,51"/>
                    <!-- 플레이스홀더 -->
                    <TextBlock Text="비밀번호를 다시 입력하세요"
                               Foreground="#8C8C8C"
                               FontSize="16"
                               Margin="20,-35,0,0"
                               VerticalAlignment="Top"
                               IsHitTestVisible="False"
                               x:Name="PW2Placeholder"/>
                    <TextBlock x:Name="WarningText"
                           Foreground="#FF5555"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           TextAlignment="Center"
                           
                           Margin="0 16 0 0" Height="16" VerticalAlignment="Top"
                           
                           />
                </Grid>

                <!-- 가입 버튼 -->
                <Button Content="가입 요청하기"
                        Margin="0 -25 0 0 "
                        Width="308" Height="54"
                        Background="#D9D9D9"
                        BorderBrush="#8C8C8C"
                        FontSize="18"
                        Click="ButtonAddName_Click"/>

                <!-- 로그인 이동 -->
                <TextBlock Text="기존 사원이라면? 로그인 하러 가기"
                           Foreground="#8C8C8C"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           Margin="0,10,0,0"
                           MouseDown="GoToLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
