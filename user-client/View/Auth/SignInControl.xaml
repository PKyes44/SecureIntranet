<UserControl x:Class="user_client.View.SignInControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#E1E1E1">

    <UserControl.Resources>
        <!-- 둥근 테두리 TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 둥근 테두리 PasswordBox -->
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- 전체 배경 -->
    <Grid Background="#E1E1E1">
        <!-- 로그인 박스 -->
        <Border Width="457" Height="420"  
                Background="#E1E1E1"
                BorderBrush="#A4A4A4" 
                BorderThickness="1" 
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20">

            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 로고 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 사번 입력 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 비밀번호 입력 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 에러 메시지 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 로그인 버튼 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 회원가입 이동 -->
                </Grid.RowDefinitions>

                <!-- 로고 -->
                <TextBlock Grid.Row="0"
                           Text="Tribosss"
                           FontFamily="pack://application:,,,/Fonts/#Ravi Prakash"
                           FontSize="50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- 사번 입력 -->
                <Grid Grid.Row="1" Width="308" Height="54" Margin="0,0,0,16">
                    <TextBox x:Name="LoginIdBox"
                             Style="{StaticResource RoundedTextBox}"
                             FontSize="16"
                             Padding="12,0,0,0"
                             VerticalContentAlignment="Center"
                             BorderBrush="#8C8C8C"
                             BorderThickness="1"
                             Background="#E1E1E1"
                             GotFocus="LoginIdBox_GotFocus"
                             LostFocus="LoginIdBox_LostFocus"/>
                    <TextBlock x:Name="LoginIdPlaceholder"
                               Text="사번을 입력하세요"
                               Foreground="#8C8C8C"
                               FontSize="16"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- 비밀번호 입력 -->
                <Grid Grid.Row="2" Width="308" Height="54" Margin="0,0,0,8">
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource RoundedPasswordBox}"
                                 FontSize="16"
                                 Padding="12,0,0,0"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="#8C8C8C"
                                 BorderThickness="1"
                                 Background="#E1E1E1"
                                 GotFocus="PasswordBox_GotFocus"
                                 LostFocus="PasswordBox_LostFocus" Margin="0,-16,0,16"/>
                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="비밀번호를 입력하세요"
                               Foreground="#8C8C8C"
                               FontSize="16"
                               Margin="20,0,0,0"
                               VerticalAlignment="Top"
                               IsHitTestVisible="False"/>
                </Grid>

                <!-- 에러 메시지 -->
                <TextBlock Grid.Row="3"
                           x:Name="LoginErrorText"
                           Text=""
                           Foreground="#FF5555"
                           FontSize="12"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0,0,0,8"/>

                <!-- 로그인 버튼 -->
                <Button Grid.Row="4"
                        Content="로그인"
                        Width="308" Height="54"
                        Background="#D9D9D9"
                        BorderBrush="#8C8C8C"
                        FontSize="18"
                        Click="LoginButton_Click"/>

                <!-- 회원가입 이동 -->
                <TextBlock Grid.Row="5"
                           Text="신규 입사자라면? 회원가입 하러 가기"
                           Foreground="#8C8C8C"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Cursor="Hand"
                           Margin="0,30,0,0"
                           MouseDown="GoToSignUp_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
