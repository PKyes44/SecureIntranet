<UserControl x:Class="user_client.View.TotpControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <Grid Background="#E1E1E1">
        <!-- 중앙 박스 -->
        <Border Width="457" Height="324"  
                Background="#E1E1E1"
                BorderBrush="#A4A4A4" 
                BorderThickness="1" 
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20">
            <Grid>
                <StackPanel>
                    <!-- 제목 -->
                    <TextBlock Text="Tribosss"
                               FontFamily="pack://application:,,,/Fonts/#Ravi Prakash"
                               FontSize="50"
                               Width="154"
                               HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" Height="25" HorizontalAlignment="Right" Margin="0 0 55 10">
                        <!-- 남은 시간 -->
                        <TextBlock x:Name="siran"
                                   Text="남은 시간:"
                                   FontSize="16"
                                   Foreground="#000000"/>
                        <TextBlock x:Name="TimeLeftText" 
                                   Text="180초" 
                                   HorizontalAlignment="Left" 
                                   Foreground="#FF5555" 
                                   FontSize="16" />
                    </StackPanel>


                    <Grid>
                    <!-- OTP 입력 박스 -->
                    <TextBox x:Name="OtpBox"
                             FontSize="16"
                             Width="308"
                             Height="54"
                             Padding="12,0,0,0"
                             Background="#E1E1E1"
                             BorderBrush="#8C8C8C"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             GotFocus="OtpBox_GotFocus"
                             LostFocus="OtpBox_LostFocus"
                             />

                    <!-- 플레이스홀더 -->
                        <TextBlock x:Name="OtpPlaceHolder"
                               Text="보안 코드를 입력하세요"
                               Foreground="#8C8C8C"
                               FontSize="16"
                               Margin="67,0,78,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                    </Grid>

                    <TextBlock
                               x:Name="OtpErrorText"
                               Text="보안코드가 잘못되었습니다"
                               Foreground="#FF5555"
                               Height="14"
                               FontSize="12"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Visibility="Collapsed"
                               Margin="0 5 0 0"/>

                    <Button Content="인증하기"
                     Width="308" Height="45"
                     Background="#D9D9D9"
                     BorderBrush="#8C8C8C"
                     FontSize="18"
                     Click="OtpButton_Click" Margin="0 10 0 0"/>
                </StackPanel>
            </Grid>
        </Border>


    </Grid>
</UserControl>
