<UserControl x:Class="user_client.View.PostListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:user_client.View"
             xmlns:vm="clr-namespace:user_client.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1060">
    <UserControl.DataContext>
        <vm:PostViewModel />
    </UserControl.DataContext>

    <Grid Margin="160 0 0 0" Name="MainContentGrid">
        <Frame x:Name="PostListFrame"
               NavigationUIVisibility="Hidden" 
               Visibility="Collapsed"/>
        <Grid x:Name="ListViewPanel" Visibility="Visible">
            <TextBlock Text="전체 글 보기" FontSize="20" FontWeight="Bold"
                       Margin="50,40,0,0" />
            <TextBlock FontSize="12" Margin="50,80,0,0">
                <Run Text="{Binding TotalPostCount}" />
                <Run Text="개의 글" />
            </TextBlock>


            <Button Content="생성" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Width="50" Height="30" Margin="0,20,50,0" FontSize="12" Click="CreateButton_Click" />

            <Grid Margin="30,110,30,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 헤더 -->
                    <RowDefinition Height="*"/>
                    <!-- 리스트 영역 -->
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Height="1" Background="black" VerticalAlignment="Top" Margin="0,0,0,0"/>

                <!-- 헤더 -->
                <Grid Grid.Row="0" Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Margin="5,0"/>
                    <TextBlock Grid.Column="1" Text="제목" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0" TextAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="작성자" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0" TextAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="작성일" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0" TextAlignment="Center"/>
                </Grid>

                <!-- 리스트 -->
                <ListView Grid.Row="1"
                          Background="Transparent"
                      ItemsSource="{Binding Posts}"
                      SelectedItem="{Binding SelectedPost, Mode=TwoWay}"
                      MouseDoubleClick="PostList_MouseDoubleClick"
                      BorderThickness="0"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="MinHeight" Value="25"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="LightGray"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Resources>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="11*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                    CornerRadius="5"
                                    Padding="5,2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Type}" Value="notice">
                                                    <Setter Property="Background" Value="#FFFFE5E5"/>
                                                    <!-- 연한 빨강 -->
                                                    <Setter Property="BorderBrush" Value="#FFFF8080"/>
                                                    <!-- 빨강 테두리 -->
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Type}" Value="normal">
                                                    <Setter Property="Background" Value="#FFE0E0E0"/>
                                                    <!-- 연한 회색 -->
                                                    <Setter Property="BorderBrush" Value="#FFB0B0B0"/>
                                                    <!-- 회색 테두리 -->
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <TextBlock Text="{Binding Type}" FontWeight="Bold" FontSize="12" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="notice">
                                                        <Setter Property="Foreground" Value="#FFFF4040"/>
                                                        <!-- 진한 빨강 -->
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="normal">
                                                        <Setter Property="Foreground" Value="#FF606060"/>
                                                        <!-- 진한 회색 -->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                                <TextBlock Grid.Column="1" Text="{Binding Title}" VerticalAlignment="Center" Margin="5,0" TextAlignment="Left"/>
                                <TextBlock Grid.Column="2" Text="{Binding Author}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0" TextAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="{Binding DateString}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0" TextAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                <ItemsControl ItemsSource="{Binding PageNumbers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" Margin="2"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Command="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 CommandParameter="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Padding" Value="5,2"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFE0E0E0"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FFC0C0C0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
